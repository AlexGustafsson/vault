<SecretListHeader
  @model={{this.model.engine}}
  @backendCrumb={{hash
    label=this.model.engine.id
    text=this.model.engine.id
    path="vault.cluster.secrets.backend.list-root"
    model=this.model.engine.id
  }}
  @isEngine={{true}}
/>

{{#if this.model.hasConfig}}
  <Toolbar>
    <ToolbarActions>
      {{! if auto-tidy NOT configured }}
      <ToolbarLink @route="tidy.manage">
        Manage tidy
      </ToolbarLink>
      {{! else }}
      <BasicDropdown @class="popup-menu" @horizontalPosition="auto-right" @verticalPosition="below" as |D|>
        <D.Trigger
          class={{concat "toolbar-link" (if D.isOpen " is-active")}}
          @htmlTag="button"
          data-test-manage-tidy-dropdown
        >
          Manage tidy
          <Chevron @direction="down" @isButton={{true}} />
        </D.Trigger>
        <D.Content @defaultClass="popup-menu-content">
          <nav class="box menu" aria-label="tidy options">
            <ul class="menu-list">
              <li class="action">
                <LinkTo @route="tidy.auto">Auto-tidy configuration</LinkTo>
              </li>
              <li class="action">
                <LinkTo @route="tidy.manual">Perform manual tidy</LinkTo>
              </li>
            </ul>
          </nav>
        </D.Content>
      </BasicDropdown>
    </ToolbarActions>
  </Toolbar>
  tidy-status info here
{{else}}
  <Toolbar />
  <EmptyState @title="PKI not configured" @message={{this.notConfiguredMessage}}>
    <LinkTo @route="configuration.create">
      Configure PKI
    </LinkTo>
  </EmptyState>
{{/if}}