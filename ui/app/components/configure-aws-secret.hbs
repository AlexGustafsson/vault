<Hds::Tabs class="has-top-margin-l" as |T|>
  <T.Tab data-test-tab="access-to-aws">
    Dynamic IAM root credentials
  </T.Tab>
  <T.Tab data-test-tab="lease">
    Leases
  </T.Tab>
  <T.Panel>
    <ConfigureAwsSecret::AccessToAwsForm
      @model={{@model}}
      @accessKey={{@accessKey}}
      @secretKey={{@secretKey}}
      @region={{@region}}
      @iamEndpoint={{@iamEndpoint}}
      @stsEndpoint={{@stsEndpoint}}
      @onSubmit={{@saveAWSRoot}}
    />
  </T.Panel>
  <T.Panel>
    <ConfigureAwsSecret::LeaseForm @model={{@model}} @onSubmit={{@saveAWSLease}} />
  </T.Panel>
</Hds::Tabs>